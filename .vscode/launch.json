    "version": "0.2.0",
    "configurations": [
        {
            "name": "unit test",
            "type": "debugpy",
            "request": "launch",
            "program": "models/unet.py",
            "console": "integratedTerminal",
            "args": ["--debug"],
            "justMyCode": false
        },
        {
            "name": "train",
            "type": "debugpy",
            "request": "launch",
            "program": "train.py",
            "console": "integratedTerminal",
            "args": ["--debug"],
            "justMyCode": false,
            "env": {
                "CUDA_VISIBLE_DEVICES": "1"
            }
        },
        {
            "name": "train (distributed)",
            "type": "python",
            "request": "launch",
            "module": "torch.distributed.run",
            "console": "integratedTerminal",
            "args": [
                "--nproc_per_node=2",
                "--rdzv_backend", "c10d",
                "--rdzv_endpoint", "localhost:29500",
                "--nnodes=1",
                "train.py",
                "--debug"
            ],
            "justMyCode": false,
            "env": {
                "CUDA_VISIBLE_DEVICES": "0,1",
                "TORCH_NCCL_DEBUG": "INFO",
                "TORCH_DISTRIBUTED_DEBUG": "DETAIL",
                "NCCL_P2P_DISABLE": "0",
                "NCCL_ASYNC_ERROR_HANDLING": "1"
            }
        },
        {
            "name": "eval",
            "type": "debugpy",
            "request": "launch",
            "program": "eval_diffusion.py",
            "console": "integratedTerminal"
        },
    ]
}