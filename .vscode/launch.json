    "version": "0.2.0",
    "configurations": [
        {
            "name": "unit test",
            "type": "debugpy",
            "request": "launch",
            "program": "data/video_dataset.py",
            "console": "integratedTerminal",
            "args": ["--debug"],
            "justMyCode": false
        },
        {
            "name": "temp",
            "type": "debugpy",
            "request": "launch",
            "program": "temp.py",
            "console": "integratedTerminal",
            "args": ["--debug"],
            "justMyCode": false
        },
        {
            "name": "unit test model",
            "type": "debugpy",
            "request": "launch",
            "module": "models.dit_video",  // Run as a module instead of a script
            "console": "integratedTerminal",
            "args": ["--debug"],
            "justMyCode": false
        },
        {
            "name": "train (one sample)",
            "type": "debugpy",
            "request": "launch",
            "program": "train.py",
            "console": "integratedTerminal",
            "args": ["one_sample=True"],
            "justMyCode": false,
            "env": {
                "CUDA_VISIBLE_DEVICES": "2"
            }
        },
        {
            "name": "train (one sample + debug)",
            "type": "debugpy",
            "request": "launch",
            "program": "train.py",
            "console": "integratedTerminal",
            "args": ["one_sample=True", "debug=True"],
            "justMyCode": false,
            "env": {
                "CUDA_VISIBLE_DEVICES": "2"
            }
        },
        {
            "name": "train (debug)",
            "type": "debugpy",
            "request": "launch",
            "program": "train.py",
            "console": "integratedTerminal",
            "args": ["debug=True"],
            "justMyCode": false,
            "env": {
                "CUDA_VISIBLE_DEVICES": "2"
            }
        },
        {
            "name": "train (distributed + debug)",
            "type": "python",
            "request": "launch",
            "module": "torch.distributed.run",
            "console": "integratedTerminal",
            "args": [
                "--nproc_per_node=1",
                "--rdzv_backend", 
                "c10d",
                "--rdzv_endpoint", 
                "localhost:29500",
                "--nnodes=1",
                "train.py",
                "debug=True",
                // "one_sample=True"
            ],
            "justMyCode": false,
            "env": {
                "CUDA_VISIBLE_DEVICES": "2",
                "TORCH_NCCL_DEBUG": "INFO",
                "TORCH_DISTRIBUTED_DEBUG": "DETAIL",
                "NCCL_P2P_DISABLE": "0",
                "NCCL_ASYNC_ERROR_HANDLING": "1"
            }
        },
        {
            "name": "eval",
            "type": "debugpy",
            "request": "launch",
            "program": "eval_diffusion.py",
            "console": "integratedTerminal"
        },
    ]
}